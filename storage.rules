rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /commissioni/{commissione}/{allFiles=**} {
      allow read;
      allow write: if request.auth.token.isReferente==commissione
      							|| (commissione=='comitato' && request.auth.token.isRappre);
    }

    match /articles/{allPaths=**} {
      allow read: if request.auth!=null;
      allow write: if request.auth.token.isQp==true;
    }

    match /csv/{allFiles=**} {
      allow read, write: if request.auth.token.isAdmin==true;
    }
  }
}
