{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@csl/google": ["libs/google/src/index.ts"],
			"@csl/next-ui": ["libs/next-ui/src/index.ts"],
			"@csl/shared": ["libs/shared/src/index.ts"],
			"@csl/strapi": ["libs/strapi/src/index.ts"],
			"@csl/types": ["libs/types/src/index.ts"],
			"@csl/ui": ["libs/ui/src/index.ts"]
		}
	},
	"angularCompilerOptions": {
		"strictTemplates": true
	},
	"exclude": ["node_modules", "tmp"]
}
