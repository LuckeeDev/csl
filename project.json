{
	"targets": {
		"version": {
			"executor": "@jscutlery/semver:version",
			"options": {
				"syncVersions": true,
				"noVerify": true,
				"rootChangelog": true,
				"commitMessageFormat": "release(csl): ğŸ« release version ${version}",
				"postTargets": ["my-project:github"]
			}
		},
		"github": {
			"executor": "@jscutlery/semver:github",
			"options": {
				"tag": "${tag}",
				"notes": "${notes}"
			}
		}
	},
	"root": ".",
	"tags": []
}
