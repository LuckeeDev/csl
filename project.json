{
	"name": "workspace",
	"$schema": "node_modules/nx/schemas/project-schema.json",
	"targets": {
		"version": {
			"executor": "@jscutlery/semver:version",
			"options": {
				"syncVersions": true,
				"noVerify": true,
				"rootChangelog": true,
				"push": true,
				"postTargets": ["workspace:github"],
				"skipCommitTypes": "build,ci,docs,style,refactor,test",
				"commitMessageFormat": "release(csl): üè´ release version ${version}"
			}
		},
		"github": {
			"executor": "@jscutlery/semver:github",
			"options": {
				"tag": "${tag}",
				"notes": "${notes}"
			}
		}
	},
	"tags": []
}
