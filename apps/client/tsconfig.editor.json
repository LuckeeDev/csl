{
  "extends": "./tsconfig.json",
  "include": ["**/*.ts"],
  "compilerOptions": {
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@dashboard/*": ["src/app/dashboard/*"],
      "@qp-admin/*": ["src/app/qp-admin/*"],
      "@referente/*": ["src/app/referente/*"],
      "@bar-admin/*": ["src/app/bar-admin/*"],
      "@rappre/*": ["src/app/rappre/*"],
      "@vice/*": ["src/app/vice/*"],
      "@main/*": ["src/app/main/*"],
      "@shared/*": ["src/app/shared/*"],
      "@global/*": ["src/app/global/*"],
      "@admin/*": ["src/app/admin/*"],
      "@app/*": ["src/app/*"],
      "@environments/*": ["src/environments/*"],
      "@assets/*": ["src/assets/*"],
      "@csl/shared": ["../../libs/shared/src/index.ts"],
      "@csl/ui": ["../../libs/ui/src/index.ts"]
    }
  }
}
