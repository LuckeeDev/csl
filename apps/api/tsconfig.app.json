{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node", "express", "./src/@types"],
    "baseUrl": ".",
    "paths": {
      "@controllers": ["src/app/controllers"],
      "@common/utils": ["src/app/common/utils"],
      "@common/middlewares": ["src/app/common/middlewares"],
      "@common/logs": ["src/app/common/logs"],
      "@common/firebase": ["src/app/common/firebase"],
      "@common/auth": ["src/app/common/auth"],
      "@models": ["src/app/models"],
      "@routes": ["src/app/routes"],
      "@core": ["src/app/core"],
      "@assets/*": ["src/assets/*"],
      "@environments/*": ["src/environments/*"],
      "@csl/shared": ["../../libs/shared/src/index.ts"],
      "@csl/ui": ["../../libs/ui/src/index.ts"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}
